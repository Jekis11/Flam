<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg"
        android:text="STORY HOURS"
        android:textSize="20sp"
        android:textColor="@color/Schwarz"
        android:fontFamily="@font/black"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8:30 am – 8:00 pm,Monday                                                                      CLOSED, Tuesday
                                                                      8:30 am – 8:00 pm, Wednesday – Sunday
                                                                                          Open until 2:00 pm on Thanksgiving Day and Christmas Eve. Closed Christmas Day.
                                                     Hours may vary due to COVID-19. Please call for the most accurate information"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        tools:ignore="HardcodedText" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE"
        />
    <Button
        android:id="@+id/btDismissCustomDialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:text="OK"
        />
</LinearLayout>