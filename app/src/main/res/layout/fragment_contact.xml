<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HauptModels.ContactFragment">


    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/map"
        tools:context=".HauptModels.MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musical Instrument Shop Flam"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/bold"
        android:textColor="@color/Schwarz"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sarland Strasse 8"
        android:layout_marginTop="315dp"
        android:fontFamily="@font/din"
        android:textColor="@color/Schwarz"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:fontFamily="@font/din"
        android:text="Andernach,PZ 56626"
        android:textColor="@color/Schwarz" />


    <Button
        android:id="@+id/buttongetdirection"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/ic_round_assistant_direction_24" />

    <Button
        android:id="@+id/buttonphone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_baseline_phone_24"
        android:layout_marginTop="375dp"
        />

    <Button
        android:id="@+id/buttoncontactemail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/emailblack"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="200dp"
        />

    <Button
        android:id="@+id/buttontaxi"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/ic_baseline_local_taxi_24"
        android:layout_marginLeft="200dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/bold"
        android:text="Get Directions"
        android:textColor="@color/Orang"
        android:layout_marginLeft="30dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="375dp"
        android:text="Phone"
        android:fontFamily="@font/bold"
        android:textColor="@color/Orang"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Ride with uber"
        android:fontFamily="@font/bold"
        android:textColor="@color/Orang"
        android:layout_marginLeft="230dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="375dp"
        android:text="Email Store"
        android:fontFamily="@font/bold"
        android:textColor="@color/Orang"
        android:layout_marginLeft="230dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/black"
        android:paddingTop="0dp"
        android:text="CONTACT INFO"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>