<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blau"
    tools:context=".models.PaymentActivity">

    <EditText
        android:id="@+id/amount_editText"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Weiss"
        android:textSize="16sp"
        android:textColor="@color/Weiss"
        android:textStyle="normal"
        android:padding="10dp"
        android:hint="Enter Your Amount"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/razorPay_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/amount_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/payment" />

</RelativeLayout>

