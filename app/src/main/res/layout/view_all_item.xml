<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp">

    <LinearLayout
        android:background="@color/Blau"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/border"
            android:src="@drawable/drums"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:id="@+id/cat_nav_home"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/nav_cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/Schwarz"/>

            <TextView
                android:id="@+id/nav_cat_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textColor="@color/Schwarz"/>
            <TextView
                android:id="@+id/nav_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Schwarz"/>

            <TextView
                android:id="@+id/nav_cat_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 % OFF"
                android:textSize="24sp"
                android:fontFamily="@font/black"
                android:textColor="@color/Orang"/>




            <ImageView
                android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="14dp"
                android:layout_marginRight="5dp"
                android:id="@+id/back"/>






        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>