<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_margin="5dp"
    android:elevation="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/border"
            android:src="@drawable/drums"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:id="@+id/cat_nav_home"/>


        <LinearLayout
            android:background="@drawable/borderblack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView

                android:id="@+id/nav_cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="24sp"
                android:fontFamily="@font/bold"
                android:textColor="@color/Schwarz"/>

            <TextView
                android:id="@+id/nav_cat_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:singleLine="false" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/nav_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price â‚¬"
                    android:textSize="20sp"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/Schwarz"
                    />

                <TextView
                    android:id="@+id/pricenaveuro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/Orang"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-5dp"
                    android:src="@drawable/rate"
                    />

                <TextView
                    android:id="@+id/rec_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="5.0"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>







            <ImageView
                android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="14dp"
                android:layout_marginRight="5dp"
                android:id="@+id/back"/>
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>